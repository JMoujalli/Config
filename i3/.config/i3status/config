general {
        output_format = "i3bar"
	colors = true
	interval = "5"
}

order += "batter 0"
order += "volume master"
order += "time"

time {
     format = "%a, %d %b %Y  %H:%M "
}

volume master {
        format = "%volume"
        format_muted = "%volume"
        device = "pulse"
}

